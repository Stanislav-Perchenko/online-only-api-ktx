<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="124dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical" >
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView android:id="@+id/img_category_header"
            android:layout_width="@dimen/category_header_icon_size"
            android:layout_height="@dimen/category_header_icon_size"
            android:scaleType="fitCenter" />

        <TextView android:id="@+id/category_title_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:layout_marginLeft="@dimen/padding_large"
            android:textSize="32sp"
            android:textStyle="bold"
            android:letterSpacing="0.12"
            android:textColor="#222222"
            tools:text="Kotlin"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        style="@style/divider.header"
        android:layout_gravity="bottom"/>
</FrameLayout>